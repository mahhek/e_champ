<div id="wrapper">
  <br />
  <br />
  <br />
  <div class="login_text"></div>
  <section id="deviseauth">

    <div class="login">
      <div id="local" class="box">
        <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
          <div class="login">
            <div style="margin-left: 30px;">
              <h2 style="padding-top:15px;">Sign up</h2>
            </div>
            <%= devise_error_messages! %>

            <div class="column">
              <%= f.label :email, :class=> "label" %>
              <%= f.text_field :email, :class=> "text" %>
            </div>

            <div class="column">
              <%= f.label :name, :class=> "label" %>
              <%= f.text_field :name , :class=> "text"%>
            </div>

            <div class="column">
              <%= f.label :user_name , :class=> "label"%>
              <%= f.text_field :user_name, :class=> "text" %>
            </div>

            <div class="column">
              <%= f.label :password, :class=> "label" %>
              <%= f.password_field :password, :class=> "text" %>
            </div>

            <div class="column">
              <%= f.label :password_confirmation, :class=> "label" %>
              <%= f.password_field :password_confirmation , :class=> "text"%>
            </div>

            <div class="column">
              <label class= "label">Sign Up As</label>
              <%= select_tag( "role_id" , options_from_collection_for_select(@roles, :id, :name), :class=> "text")%>
            </div>

            <div class="column">
              <%= f.label :company_name, :class=> "label" %>
              <%= f.text_field :company_name, :class=> "text" %>
            </div>

            <div class="column"><%= f.submit "Sign up" %></div>
          </div>
        <% end %>
      </div>
    </div>

    <div id="remote2">
      <div id="services" class="box">
        <a href="/auth/facebook" class="services2"><%= image_tag "facebook_64.png", :alt => "Facebook" %></a>
      </div>
    </div>

    <div id="devise_links">
      <%= render :partial => "devise/shared/links" %>
    </div>
  </section>
</div>