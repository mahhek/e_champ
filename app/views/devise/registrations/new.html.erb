<div id="wrapper">
  <br>
  <br>
  <br>
  <div class="login_text"><img src="images/signup.png" width="420" height="40" alt="" /></div>
  <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
    <div class="signup">
      <div style="margin-left: 30px;">
        <h2 style="padding-top:15px;">Sign up</h2>
      </div>
      <%= devise_error_messages! %>

      <div class="column">
        <%= f.label :email, :class=> "label" %>
        <%= f.text_field :email, :class=> "text" %>
      </div>

      <div class="column">
        <%= f.label :password, :class=> "label" %>
        <%= f.password_field :password, :class=> "text" %>
      </div>

      <div class="column">
        <%= f.label :password_confirmation, :class=> "label" %>
        <%= f.password_field :password_confirmation , :class=> "text"%>
      </div>
      <div class="column1"><input type="checkbox" value="" name="remember" ><label >Remember me</label>
        <input type="submit" class="sbutton" value="" name="login">
      </div> <div class="clear"></div>
      <div class="term_column"><label class="term" >By clicking 'Sign up', I confirm that I agree with the Event Champion terms of service. </label>    </div>
      <div class="clear"></div>
      <div class="line"></div>
      <div class="column1">
        <h1>Already registered? <span>Log in.</span></h1>
        <p>Want to know more?</p><p>Find out how Event Champion can</p><p><span>help</span> you sell out your event!</p>
      </div>
      <%#*<div class="column">%>
        <%#= f.submit "Sign up" %>
      <%#*</div>%>
    </div>
  <% end %>

</div>