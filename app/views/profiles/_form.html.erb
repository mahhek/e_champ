<%= form_for @profile,:html => {:multipart => true} do |f| %>
  <% if @profile.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@profile.errors.count, "error") %> prohibited this profile from being saved:</h2>

      <ul>
        <% @profile.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :hometown %><br />
    <%= f.text_field :hometown %>
  </div>
  <div class="field">
    <%= f.label :interests %><br />
    <textarea name="profile[interests]" class="mceEditor" rows="3" cols="50" >
      <%= raw(@profile.interests) %>
    </textarea>
  </div>
  <div class="field">
    <%= f.label :education %><br />
    <textarea name="profile[education]" class="mceEditor" rows="3" cols="50" >
      <%= raw(@profile.education) %>
    </textarea>    
  </div>
  <div class="field">
    <%= f.label :biography %><br />  
    <textarea name="profile[biography]" class="mceEditor" rows="3" cols="50" >
      <%= raw(@profile.biography) %>
    </textarea>
  </div>

  <div class="field">
    <%= "Profile Picture" %><br />
    <%= f.file_field :photo %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
